{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Deno test",
      "type": "node",
      "program": "${workspaceFolder}/test/ops.test.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-wait",
        "--allow-all",
        "--no-check",
        "test/patterns.test.ts",
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Python",
      "type": "debugpy",
      "request": "launch",
      "program": "${input:filePath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "/Users/karel/Documents/denograd/tinygrad"
      }
    }
  ],
  "inputs": [
    {
      "id": "filePath",
      "type": "promptString",
      "description": "Enter the path to the Python file to debug",
      "default": "path/to/your/script.py"
    }
  ]
}
