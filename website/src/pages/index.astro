---
import Layout from "../components/Layout.astro";
import { getExamples } from "../helpers";
import { Code } from "../components/Code";
const examples = await getExamples();
---

<Layout>
  <div class="mt-20 flex px-6 w-full max-w-[1200px] mx-auto grid grid-cols-2">
    <div class="flex flex-col items-start justify-center gap-4">
      <h1 class="text-6xl font-bold">ML library for the web</h1>
      <p class="border border-white/10 rounded-lg p-2 px-4 hover:bg-blue-500 duration-150 cursor-pointer">npm i @jsgrad/jsgrad</p>
    </div>
    <div class="relative flex items-center justify-center py-20">
      <div class="hero-radial absolute w-full aspect-square my-auto"></div>
      <Code examples={examples} client:load />
    </div>
  </div>
</Layout>
