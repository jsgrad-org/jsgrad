---
import { typeColors } from "../../../components/API";
import DocsLayout from "../../../components/DocsLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("api");
---

<DocsLayout>
  <h1>API</h1>
  <div class="flex flex-col gap-1">
    {
      posts.map((x) => (
        <span class="flex gap-2 whitespace-pre">
          <span class={`w-28 ${typeColors[x.data.kind]}`}>{x.data.kind.replace("typeAlias", "type")}</span>
          <a href={`/docs/api/${x.data.name}`}>{x.data.name}</a>
        </span>
      ))
    }
  </div>
</DocsLayout>
