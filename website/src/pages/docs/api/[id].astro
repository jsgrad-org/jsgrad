---
import { getCollection } from "astro:content";
import Layout from "../../../components/Layout.astro";
import { Item } from "./Items";
import DocsLayout from "../../../components/DocsLayout.astro";

export const getStaticPaths = async () => {
  const posts = await getCollection("api");
  return posts.map((post) => ({ params: { id: post.data.id }, props: { data: post.data, all: posts.map((x) => x.data.name) } }));
};
---

<DocsLayout>
  <Item item={Astro.props.data} all={Astro.props.all} />
</DocsLayout>
