---
import "../styles.css";
import "@fontsource/audiowide";
import "@fontsource-variable/inter";
---

<html lang="en">
  <head>
    <meta name="color-scheme" content="dark" />
    <meta charset="utf-8" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/PrismJS/prism-themes@master/themes/prism-atom-dark.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>jsgrad</title>
  </head>
  <body class="bg-[#121212] text-white relative flex flex-col" style={{ fontFamily: "Inter Variable" }}>
    <div class="fixed h-16 pt-3 px-6 w-full">
      <header
        class="max-w-[1200px] backdrop-blur-md px-6 rounded-full mx-auto w-full h-full flex justify-between items-center border border-white/10"
      >
        <div class="flex items-center gap-6 text-sm">
          <a href="/" style={{ fontFamily: "Audiowide" }} class="text-2xl mr-2">jsgrad</a>
          <a href="/docs">Docs</a>
          <a href="/blog">Blog</a>
          <a href="/playground">Playground</a>
        </div>
        <a href="https://github.com/jsgrad-org/jsgrad">
          <svg class="h-6" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path>
          </svg></a
        >
      </header>
    </div>
    <slot />
  </body>
</html>
