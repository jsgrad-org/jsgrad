{
  "tasks": {
    "test": "deno test -A --parallel",
    "bench": "deno bench -A",
    "format": "deno fmt",
    "check": "deno check . ",
    "lint": "deno lint"
  },
  "workspace": [
    "./examples/react",
    "./denograd",
    "./models",
    "./website"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "lineWidth": 10000,
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "verbatim-module-syntax",
        "prefer-const",
        "require-await"
      ],
      "include": [
        "prefer-const",
        "ban-types",
        "no-class-assign",
        "no-compare-neg-zero",
        "eqeqeq"
      ]
    }
  },
  "imports": {
    "expect": "jsr:@std/expect",
    "assert": "jsr:@std/assert"
  },
  "exclude": [
    "./tinygrad",
    "./website/.astro"
  ],
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "jsxImportSourceTypes": "@types/react"
  }
}