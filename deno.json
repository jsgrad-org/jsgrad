{
  "version": "0.0.17",
  "tasks": {
    "test": "deno -A npm:vitest run --testTimeout 0",
    "bench": "deno bench -A",
    "format": "deno fmt",
    "check": "deno check --allow-import .",
    "lint": "deno lint",
    "update": "deno -A scripts/update.ts",
    "build": "deno -A cli/build.ts",
    "publish": "deno task build && cd dist && npm publish"
  },
  "workspace": [
    "./jsgrad",
    "./website",
    "./cli",
    "./dawn",
    "./models"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "lineWidth": 10000,
    "semiColons": false,
    "singleQuote": true,
    "exclude": [
      "jsgrad/runtime/autogen*",
      "jsgrad/sha256.js"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "prefer-const",
        "require-await",
        "no-slow-types",
        "ban-ts-comment",
        "ban-types"
      ],
      "include": [
        "verbatim-module-syntax",
        "prefer-const",
        "ban-types",
        "no-class-assign",
        "no-compare-neg-zero",
        "eqeqeq"
      ]
    }
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "vitest": "npm:vitest@3.0.9",
    "ffi-rs": "npm:ffi-rs@1.2.9",
    "@webgpu/types": "npm:@webgpu/types@0.1.54"
  },
  "exclude": [
    "tinygrad*",
    "website/.astro*",
    "dawn/bindings.ts",
    "dawn/webgpu.json",
    "dist",
    "website/src/content.config.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "npm:@types/react",
    "types": [
      "npm:@types/react",
      "npm:@types/react-dom"
    ]
  }
}