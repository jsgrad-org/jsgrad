{
  "tasks": {
    "test": "deno test -A --parallel",
    "bench": "deno bench -A",
    "format": "deno fmt",
    "check": "deno check . ",
    "lint": "deno lint",
    "update": "deno -A scripts/update.ts",
    "publish": "deno publish --allow-slow-types"
  },
  "workspace": [
    "./denograd",
    "./website",
    "./cli",
    "./ctypes"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "lineWidth": 10000,
    "semiColons": false,
    "singleQuote": true,
    "exclude": [
      "denograd/runtime/autogen*",
      "denograd/sha256.js"
    ]
  },
  "lint": {
    "plugins": [
      "./custom-lint.ts"
    ],
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-unused-vars",
        "prefer-const",
        "require-await",
        "no-slow-types",
        "ban-ts-comment",
        "ban-types"
      ],
      "include": [
        "verbatim-module-syntax",
        "prefer-const",
        "ban-types",
        "no-class-assign",
        "no-compare-neg-zero",
        "eqeqeq"
      ]
    }
  },
  "imports": {
    "expect": "jsr:@std/expect",
    "assert": "jsr:@std/assert"
  },
  "exclude": [
    "tinygrad*",
    "website/.astro*"
  ],
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "npm:@types/react",
    "types": [
      "npm:@types/react",
      "npm:@types/react-dom"
    ]
  }
}